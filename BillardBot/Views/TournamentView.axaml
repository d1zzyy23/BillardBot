<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:BillardBot.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BillardBot.Views.TournamentView"
             x:DataType="viewModels:TournamentViewModel">
    <Design.DataContext>
        <viewModels:TournamentViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*">
        <StackPanel>
            <Button Content="Load Matches" Command="{Binding GenerateCommand}" Margin="10" />
            <ListBox ItemsSource="{Binding Matches}" Height="400">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
    
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Expander Header="{Binding Number, StringFormat='Match {0}'}" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                            <StackPanel>
                                <TextBlock Text="{Binding Pair1Players}" FontSize="12" Padding="2" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Pair2Players}" FontSize="12" Padding="2" HorizontalAlignment="Center" />
                                <TextBlock Text="{Binding Pair3Players}" FontSize="12" Padding="2" HorizontalAlignment="Center" />
                            </StackPanel>
                        </Expander>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        
    </Grid>
</UserControl>
